<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <application
        android:name="com.mingg.coincheck.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoinApp"
        tools:targetApi="31">

        <service
            android:name=".ui.floating.FloatingWindowService"
            android:foregroundServiceType="dataSync"
            android:exported="false" />

        <activity
            android:name=".ui.setting.floatingwindow.FloatingWindowSettingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.setting.floatingwindow.FloatingTickerSelectActivity"
            android:exported="false" />
        <activity
            android:name="com.mingg.coincheck.ui.home.detail.TickerDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.mingg.coincheck.ui.main.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.mingg.coincheck.ui.splash.InitActivity"
            android:exported="true"
            android:theme="@style/Theme.CoinApp.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>